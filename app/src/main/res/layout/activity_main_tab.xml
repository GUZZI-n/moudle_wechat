        <com.example.moudle_wechat.view.TabView
            android:id="@+id/tab_anli"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Guzzi"/>

        <com.example.moudle_wechat.view.TabView
            android:id="@+id/tab_star"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Guzzi"/>

        <com.example.moudle_wechat.view.TabView
            android:id="@+id/tab_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Guzzi"/>
